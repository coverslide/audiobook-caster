{% extends "layout.html.twig" %}

{% block body %}
    <h3>Authors:</h3>
    <ul>
        {% for author in authors %}
            <li>
                <a href="{{ app.url_generator.generate('books', {author: author}) }}">
                    {{author}}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
